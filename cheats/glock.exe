// Terminate Any Running Program
void TerminateProgram() {
    std::string program;
    std::cout << "[âŒ] Enter the process name to terminate (e.g., notepad.exe): ";
    std::cin >> program;

    std::string command = "taskkill /F /IM " + program + " >nul 2>&1";
    int result = system(command.c_str());

    if (result == 0) {
        std::cout << "[âœ”] Successfully terminated " << program << ".\n";
    } else {
        std::cout << "[âŒ] Failed to terminate " << program << ". Ensure you entered the correct process name.\n";
    }
}

